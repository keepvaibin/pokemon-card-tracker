generator client {
  provider = "prisma-client-js"
  output   = "../generated/user"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String?
  cards           String[]
  createdAt       DateTime @default(now())
  themePreference String   @default("system")
}
