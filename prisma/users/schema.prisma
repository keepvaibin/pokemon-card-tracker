// prisma/schema.prisma (USER DB)
generator client {
  provider = "prisma-client-js"
  output   = "../../generated/user"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String?
  // keep legacy cards for backward compatibility with existing code:
  cards           String[] @default([])
  createdAt       DateTime @default(now())
  themePreference String   @default("system")

  lists           List[]
}

model List {
  id        String   @id @default(uuid())
  userId    String
  name      String
  isDefault Boolean  @default(false)
  cards     String[] @default([])

  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, name])
}
